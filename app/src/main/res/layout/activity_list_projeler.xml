<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="20dp"
    android:clickable="false"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#dcdcdc"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    card_view:contentPaddingLeft="20dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/projeler_list_proje_adi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Proje Adı"
            android:textColor="#343434"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/projeler_list_durumu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Durumu"
            android:textColor="#343434"
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/projeler_list_kayit_tarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kayıt Tarihi"
            android:textColor="#343434"
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>