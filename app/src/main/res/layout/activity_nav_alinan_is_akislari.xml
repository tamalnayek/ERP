<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.istakip.AlinanGorevler.AlinanIsAkislari">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/yeni_gorev_adim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:hint="Yapılan İşi Giriniz.."
            android:maxLines="5" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_yeni_gorev_adim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayout"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/rounded_button"
        android:text="KAYDET"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list_view_is_akislari"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_yeni_gorev_adim"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@color/colorFloatBtn"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/file" />

</RelativeLayout>
